<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_LEFT" prefHeight="500" prefWidth="530" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="msoe.eckerb.lab01.Dot2DotController">
    <MenuBar prefHeight="30" prefWidth="600">
            <Menu text="File">
                <MenuItem onAction="#openResponse" text="Open" />
                <MenuItem onAction="#closeResponse" text="Close" />
            </Menu>
            <Menu fx:id="drawMenu" disable="true" text="Draw">
                <MenuItem onAction="#drawLines" text="Lines Only" />
                <MenuItem onAction="#drawDots" text="Dots Only" />
                <MenuItem onAction="#drawBoth" text="Draw Both" />
            </Menu>
    </MenuBar>
    <Canvas fx:id="canvas" height="470.0" width="531.0" />
</VBox>
